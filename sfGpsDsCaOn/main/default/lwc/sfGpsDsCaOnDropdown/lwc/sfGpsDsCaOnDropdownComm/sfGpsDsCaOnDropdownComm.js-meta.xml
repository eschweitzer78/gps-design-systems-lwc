<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>65.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>Ontario DS Dropdown</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="label"
        type="String"
        label="Label"
        description="Label text displayed above the dropdown."
        required="true"
      />
      <property
        name="name"
        type="String"
        label="Name"
        description="Field name for form submission."
      />
      <property
        name="hintText"
        type="String"
        label="Hint text"
        description="Additional hint text displayed below the label."
      />
      <property
        name="defaultOptionLabel"
        type="String"
        label="Default option label"
        description="Text for the first (empty value) option."
        default="Select"
      />
      <property
        name="optionsJson"
        type="String"
        label="Options (JSON)"
        description="JSON array of options. Format: [{&quot;value&quot;:&quot;val1&quot;,&quot;label&quot;:&quot;Label 1&quot;}]"
        required="true"
      />
      <property
        name="required"
        type="Boolean"
        label="Required"
        description="Mark field as required with (required) flag."
        default="false"
      />
      <property
        name="optional"
        type="Boolean"
        label="Optional"
        description="Mark field as optional with (optional) flag."
        default="false"
      />
      <property
        name="disabled"
        type="Boolean"
        label="Disabled"
        description="Disable the dropdown."
        default="false"
      />
      <property
        name="errorMessage"
        type="String"
        label="Error message"
        description="Custom error message to display."
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to apply."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>65.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>Ontario DS Text Input (OmniStudio)</masterLabel>
  <description
  >Ontario Design System Text Input component for OmniStudio Custom LWC elements. Shadow DOM compatible.</description>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property name="label" type="String" label="Label" />
      <property
        name="fieldName"
        type="String"
        label="Field Name"
        description="OmniScript field name for data binding"
      />
      <property
        name="type"
        type="String"
        label="Input Type"
        default="text"
        description="Input type: text, email, tel, password, etc."
      />
      <property name="placeholder" type="String" label="Placeholder" />
      <property
        name="required"
        type="Boolean"
        label="Required"
        default="false"
      />
      <property name="hintText" type="String" label="Hint Text" />
      <property name="maxLength" type="Integer" label="Max Length" />
      <property name="minLength" type="Integer" label="Min Length" />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>65.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>Ontario DS Text Input</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="label"
        type="String"
        label="Label"
        description="Label text displayed above the input field."
        required="true"
      />
      <property
        name="name"
        type="String"
        label="Name"
        description="Field name for form submission."
      />
      <property
        name="type"
        type="String"
        label="Input type"
        description="Type of input field."
        datasource="text,email,tel,url,password,number"
        default="text"
      />
      <property
        name="placeholder"
        type="String"
        label="Placeholder"
        description="Placeholder text displayed when input is empty."
      />
      <property
        name="hintText"
        type="String"
        label="Hint text"
        description="Additional hint text displayed below the label."
      />
      <property
        name="required"
        type="Boolean"
        label="Required"
        description="Mark field as required with (required) flag."
        default="false"
      />
      <property
        name="optional"
        type="Boolean"
        label="Optional"
        description="Mark field as optional with (optional) flag."
        default="false"
      />
      <property
        name="disabled"
        type="Boolean"
        label="Disabled"
        description="Disable the input field."
        default="false"
      />
      <property
        name="readonly"
        type="Boolean"
        label="Read-only"
        description="Make the input field read-only."
        default="false"
      />
      <property
        name="charWidth"
        type="String"
        label="Character width"
        description="Limit input width based on expected content length."
        datasource="2,3,4,5,7,10,20,full"
      />
      <property
        name="minLength"
        type="Integer"
        label="Minimum length"
        description="Minimum number of characters required."
      />
      <property
        name="maxLength"
        type="Integer"
        label="Maximum length"
        description="Maximum number of characters allowed."
      />
      <property
        name="pattern"
        type="String"
        label="Pattern"
        description="Regular expression pattern for validation."
      />
      <property
        name="errorMessage"
        type="String"
        label="Error message"
        description="Custom error message to display."
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to apply."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

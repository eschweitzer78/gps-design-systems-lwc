<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>65.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>Ontario DS Loading Indicator</masterLabel>
  <description
  >Spinner/loading overlay for async operations following Ontario Design System guidelines.</description>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="isLoading"
        type="Boolean"
        label="Is Loading"
        description="Show or hide the loading indicator"
        default="false"
      />
      <property
        name="label"
        type="String"
        label="Label"
        description="Loading text to display"
        default="Loading"
      />
      <property
        name="overlay"
        type="Boolean"
        label="Overlay"
        description="Use full-screen overlay mode"
        default="true"
      />
      <property
        name="className"
        type="String"
        label="Additional CSS Classes"
        description="Additional CSS classes to apply"
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

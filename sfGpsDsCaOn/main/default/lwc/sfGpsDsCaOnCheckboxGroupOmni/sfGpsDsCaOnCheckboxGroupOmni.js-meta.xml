<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>65.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>Ontario DS CheckboxGroup (OmniStudio)</masterLabel>
  <description
  >Ontario Design System CheckboxGroup component for OmniStudio Custom LWC elements. Shadow DOM compatible. Stores array of selected values.</description>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="legend"
        type="String"
        label="Legend"
        description="Fieldset legend/label"
      />
      <property
        name="label"
        type="String"
        label="Label"
        description="Alias for legend"
      />
      <property
        name="name"
        type="String"
        label="Name"
        description="Input name attribute"
      />
      <property
        name="fieldName"
        type="String"
        label="Field Name"
        description="OmniScript field name for data binding (stores array of selected values)"
      />
      <property
        name="optionsJson"
        type="String"
        label="Options JSON"
        description="JSON array of {value, label} objects"
      />
      <property
        name="required"
        type="Boolean"
        label="Required"
        default="false"
      />
      <property
        name="optional"
        type="Boolean"
        label="Optional"
        default="false"
      />
      <property
        name="disabled"
        type="Boolean"
        label="Disabled"
        default="false"
      />
      <property name="hintText" type="String" label="Hint Text" />
      <property name="errorMessage" type="String" label="Error Message" />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

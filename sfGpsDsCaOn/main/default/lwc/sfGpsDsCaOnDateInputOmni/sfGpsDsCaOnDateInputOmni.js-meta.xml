<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>65.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>Ontario DS Date Input (OmniStudio)</masterLabel>
  <description
  >Ontario Design System Date Input component for OmniStudio Custom LWC elements. Uses 3 separate inputs for day, month, and year. Shadow DOM compatible.</description>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property name="label" type="String" label="Label" />
      <property
        name="fieldName"
        type="String"
        label="Field Name"
        description="OmniScript field name for data binding"
      />
      <property name="hintText" type="String" label="Hint Text" />
      <property
        name="required"
        type="Boolean"
        label="Required"
        default="false"
      />
      <property
        name="optional"
        type="Boolean"
        label="Optional"
        default="false"
      />
      <property
        name="min"
        type="String"
        label="Min Date"
        description="Minimum date in ISO format (YYYY-MM-DD)"
      />
      <property
        name="max"
        type="String"
        label="Max Date"
        description="Maximum date in ISO format (YYYY-MM-DD)"
      />
      <property name="dayLabel" type="String" label="Day Label" default="Day" />
      <property
        name="monthLabel"
        type="String"
        label="Month Label"
        default="Month"
      />
      <property
        name="yearLabel"
        type="String"
        label="Year Label"
        default="Year"
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

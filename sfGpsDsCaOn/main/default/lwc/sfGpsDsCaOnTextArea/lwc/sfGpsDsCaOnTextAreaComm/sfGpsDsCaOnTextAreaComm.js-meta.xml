<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>65.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>Ontario DS Text Area</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="label"
        type="String"
        label="Label"
        description="Label text displayed above the textarea."
        required="true"
      />
      <property
        name="name"
        type="String"
        label="Name"
        description="Field name for form submission."
      />
      <property
        name="placeholder"
        type="String"
        label="Placeholder"
        description="Placeholder text displayed when textarea is empty."
      />
      <property
        name="hintText"
        type="String"
        label="Hint text"
        description="Additional hint text displayed below the label."
      />
      <property
        name="required"
        type="Boolean"
        label="Required"
        description="Mark field as required with (required) flag."
        default="false"
      />
      <property
        name="optional"
        type="Boolean"
        label="Optional"
        description="Mark field as optional with (optional) flag."
        default="false"
      />
      <property
        name="disabled"
        type="Boolean"
        label="Disabled"
        description="Disable the textarea."
        default="false"
      />
      <property
        name="readonly"
        type="Boolean"
        label="Read-only"
        description="Make the textarea read-only."
        default="false"
      />
      <property
        name="rows"
        type="Integer"
        label="Rows"
        description="Number of visible text lines."
        default="5"
        min="2"
        max="20"
      />
      <property
        name="minLength"
        type="Integer"
        label="Minimum length"
        description="Minimum number of characters required."
      />
      <property
        name="maxLength"
        type="Integer"
        label="Maximum length"
        description="Maximum number of characters allowed."
      />
      <property
        name="errorMessage"
        type="String"
        label="Error message"
        description="Custom error message to display."
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to apply."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>65.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>Ontario DS Back Button</masterLabel>
  <description
  >Navigation back button using tertiary button styling following Ontario Design System guidelines.</description>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="label"
        type="String"
        label="Label"
        description="Button text"
        default="Back"
      />
      <property
        name="url"
        type="String"
        label="URL"
        description="Optional explicit URL. If not provided, uses browser back navigation."
      />
      <property
        name="className"
        type="String"
        label="Additional CSS Classes"
        description="Additional CSS classes to apply"
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

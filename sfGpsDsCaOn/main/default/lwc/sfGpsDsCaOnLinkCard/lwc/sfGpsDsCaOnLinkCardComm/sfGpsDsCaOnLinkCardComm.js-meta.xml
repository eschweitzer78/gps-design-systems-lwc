<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>65.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>Ontario DS Link Card</masterLabel>
  <description
  >A card with grey header background for related links. Based on Ontario DS Basic Card (light variant).</description>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="heading"
        type="String"
        label="Heading"
        description="The title of the link card"
        required="true"
        default="Link Card"
      />
      <property
        name="description"
        type="String"
        label="Description"
        description="Description text below the heading"
        default=""
      />
      <property
        name="url"
        type="String"
        label="URL"
        description="URL to navigate to"
        required="true"
        default="#"
      />
      <property
        name="isExternal"
        type="Boolean"
        label="Open in New Tab"
        description="Whether the link opens in a new tab (external link)"
        default="false"
      />
      <property
        name="headingLevel"
        type="String"
        label="Heading Level"
        description="The heading level for accessibility"
        default="h2"
        datasource="h2,h3,h4"
      />
      <property
        name="className"
        type="String"
        label="Additional CSS Class"
        description="Additional CSS class to apply to the card"
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

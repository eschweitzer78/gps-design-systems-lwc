<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle
  xmlns="http://soap.sforce.com/2006/04/metadata"
  fqn="sfGpsDsOnCaStandardThemeLayoutLwr"
>
  <apiVersion>64.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>Ontario DS LWR Standard Theme Layout</masterLabel>
  <targets>
    <target>lightningCommunity__Theme_Layout</target>
    <target>lightningCommunity__Default</target>
  </targets>

  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        label="Skip to content label"
        name="skipToContentLabel"
        type="String"
        default="Skip to main content"
      />
      <property label="Theme class name" name="themeClassName" type="String" />
      <property
        label="Layout class name"
        name="layoutClassName"
        type="String"
        default="dialog-off-canvas-main-canvas"
      />
      <property
        label="Has above header"
        name="hasAboveHeader"
        type="Boolean"
        default="true"
      />
      <property
        label="Above header class name"
        name="aboveHeaderClassName"
        type="String"
      />
      <property
        label="Has header"
        name="hasHeader"
        type="Boolean"
        default="true"
      />
      <property
        label="Header class name"
        name="headerClassName"
        type="String"
        default=""
      />
      <property
        label="Has below header"
        name="hasBelowHeader"
        type="Boolean"
        default="true"
      />
      <property
        label="Below header class name"
        name="belowHeaderClassName"
        type="String"
      />
      <property
        label="Main Id"
        name="mainId"
        type="String"
        default="main-content"
      />
      <property
        label="Footer class name"
        name="footerClassName"
        type="String"
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

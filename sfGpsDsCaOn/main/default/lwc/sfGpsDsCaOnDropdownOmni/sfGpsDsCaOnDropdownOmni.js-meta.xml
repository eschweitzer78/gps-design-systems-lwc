<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>65.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>Ontario DS Dropdown (OmniStudio)</masterLabel>
  <description
  >Ontario Design System Dropdown component for OmniStudio Custom LWC elements. Shadow DOM compatible.</description>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property name="label" type="String" label="Label" />
      <property
        name="fieldName"
        type="String"
        label="Field Name"
        description="OmniScript field name for data binding"
      />
      <property
        name="optionsJson"
        type="String"
        label="Options JSON"
        description="JSON array of {value, label} objects"
      />
      <property
        name="required"
        type="Boolean"
        label="Required"
        default="false"
      />
      <property name="hintText" type="String" label="Hint Text" />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

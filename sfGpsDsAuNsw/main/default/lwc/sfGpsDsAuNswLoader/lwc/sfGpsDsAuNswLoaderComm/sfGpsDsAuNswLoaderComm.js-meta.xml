<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>62.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>NSW DS Loader (Demo)</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="label"
        type="String"
        label="Label"
        description="Provides an explanation for the wait time to the user."
        required="true"
        default="Loading"
      />
      <property
        name="size"
        type="String"
        label="Size"
        datasource="sm,md,lg,xl"
        required="true"
        default="xl"
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to be applied."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

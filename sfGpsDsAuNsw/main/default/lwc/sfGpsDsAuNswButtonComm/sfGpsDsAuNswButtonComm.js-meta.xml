<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>57.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>NSW DS Button</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="link"
        type="String"
        label="Link"
        description="Link in Markdown format."
        required="true"
        default="[Read more](#)"
      />
      <property
        name="cstyle"
        type="String"
        label="Style"
        description="Theme style used for rendering."
        datasource="dark,dark-outline,dark-outline-solid,light,light-outline,white,danger,info"
        default="dark"
        required="true"
      />
      <property
        name="rendering"
        type="String"
        label="Rendering"
        description="Component used to render the link."
        datasource="a,button"
        required="true"
        default="button"
      />
      <property
        name="type"
        type="String"
        label="Type"
        description="Type attribute used if rendered as a button."
        datasource="button,submit,reset"
        default="button"
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to be applied."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

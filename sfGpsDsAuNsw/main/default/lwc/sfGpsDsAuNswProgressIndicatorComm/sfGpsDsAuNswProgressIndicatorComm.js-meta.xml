<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>60.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>NSW DS Progress Indicator</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="step"
        type="Integer"
        label="step"
        description="Current position of the user in the process."
        min="1"
        max="25"
        default="1"
      />
      <property
        name="of"
        type="Integer"
        label="of"
        description="Total number of steps in the process."
        min="1"
        max="25"
        default="1"
      />
      <property
        name="mode"
        type="String"
        label="Mode"
        description="Counting mode."
        default="current"
        datasource="current,cumulative,label-only"
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to be applied."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

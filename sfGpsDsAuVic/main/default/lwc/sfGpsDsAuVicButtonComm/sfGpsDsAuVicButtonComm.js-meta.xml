<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>57.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>VIC DS Button</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="label"
        type="String"
        label="Label"
        description="Text used as the label."
        default="Read more"
      />
      <property
        name="href"
        type="String"
        label="HREF"
        description="HREF to be taken to, leave blank to render as a button element."
      />
      <property
        name="target"
        type="String"
        label="Target"
        description="Value of the target attribute when rendered as anchor link."
      />
      <property
        name="theme"
        type="String"
        label="Theme"
        description="Theme colour."
        default="dark"
        datasource="dark,light"
      />
      <property
        name="disabled"
        type="Boolean"
        label="Disabled"
        description="Sets the button as disabled."
        default="false"
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to be applied."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

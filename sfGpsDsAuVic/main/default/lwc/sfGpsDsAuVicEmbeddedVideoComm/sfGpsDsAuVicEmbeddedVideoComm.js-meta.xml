<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>55.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>VIC DS Embedded Video</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="title"
        type="String"
        label="Title"
        description="Title."
        required="true"
        default="Embedded video"
      />
      <property
        name="width"
        type="Integer"
        label="Width"
        description="Width."
      />
      <property
        name="height"
        type="Integer"
        label="Height"
        description="Height."
      />
      <property
        name="src"
        type="String"
        label="Source"
        description="URL of the video."
      />
      <property
        name="variant"
        type="String"
        label="Variant"
        description="Variant."
        default="link"
        datasource="link,full"
      />
      <property
        name="mediaLink"
        type="String"
        label="Media link"
        description="Provides link to transcript - in Markdown format."
        default="[View transcript](#)"
      />
      <property
        name="transcript"
        type="String"
        label="Transcript"
        description="Text of the transcript."
      />
      <property
        name="displayTranscript"
        type="Boolean"
        label="Display transcript"
        description="Indicates that the transcript should be enabled and displayed."
        default="false"
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to be applied."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

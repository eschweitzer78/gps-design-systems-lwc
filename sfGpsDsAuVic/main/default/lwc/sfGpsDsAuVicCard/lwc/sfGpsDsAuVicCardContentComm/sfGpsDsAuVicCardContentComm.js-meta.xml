<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>62.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>VIC DS Card Content</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="link"
        type="String"
        label="Link text"
        description="Link in Markdown link format."
        default="[Read more](#)"
        editor="c/sfGpsDsStringCpe"
      />
      <property
        name="image"
        type="String"
        label="Image"
        description="A URL to an image which displays at the top of the card. If left blank no image will show."
        default="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22580%22%20height%3D%22340%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20580%20340%22%20preserveAspectRatio%3D%22none%22%3E%0A%20%20%20%20%3Cdefs%3E%0A%20%20%20%20%20%20%3Cstyle%20type%3D%22text%2Fcss%22%3E%0A%20%20%20%20%20%20%20%20%23holder%20text%20%7B%0A%20%20%20%20%20%20%20%20%20%20fill%3A%20rgb(150%2C%20150%2C%20150)%3B%0A%20%20%20%20%20%20%20%20%20%20font-family%3A%20Arial%2C%20sans-serif%3B%0A%20%20%20%20%20%20%20%20%20%20font-size%3A%2032px%3B%0A%20%20%20%20%20%20%20%20%20%20font-weight%3A%20400%3B%0A%20%20%20%20%20%20%20%20%7D%0A%20%20%20%20%20%20%3C%2Fstyle%3E%0A%20%20%20%20%3C%2Fdefs%3E%0A%20%20%20%20%3Cg%20id%3D%22holder%22%3E%0A%20%20%20%20%20%20%3Crect%20width%3D%22100%25%22%20height%3D%22100%25%22%20fill%3D%22rgb(204%2C%20204%2C%20204)%22%3E%3C%2Frect%3E%0A%20%20%20%20%20%20%3Cg%3E%0A%20%20%20%20%20%20%20%20%3Ctext%20text-anchor%3D%22middle%22%20x%3D%2250%25%22%20y%3D%2250%25%22%20dy%3D%22.3em%22%3E580%20x%20340%3C%2Ftext%3E%0A%20%20%20%20%20%20%3C%2Fg%3E%0A%20%20%20%20%3C%2Fg%3E%0A%20%20%3C%2Fsvg%3E"
        editor="c/sfGpsDsStringCpe"
      />
      <property
        name="imageAlt"
        type="String"
        label="Image alternative text"
        description="Text displayed when the image is not available."
        default="580x340"
        editor="c/sfGpsDsStringCpe"
      />
      <property
        name="focalPointX"
        type="Integer"
        label="Focal point X"
        description="Image focal point x."
        default="290"
      />
      <property
        name="focalPointY"
        type="Integer"
        label="Focal point Y"
        description="Image focal point y."
        default="170"
      />
      <property
        name="width"
        type="Integer"
        label="Width"
        description="Image width."
        default="580"
      />
      <property
        name="height"
        type="Integer"
        label="Height"
        description="Image hHeight."
        default="340"
      />
      <property
        name="border"
        type="Boolean"
        label="Border"
        description="Show / hide a top border style. If an image is supplied, then this border will not show."
        default="true"
      />
      <property
        name="center"
        type="Boolean"
        label="Center"
        description="Works only on type default, with no image. Vertically centres the details within the card."
        default="false"
      />
      <property
        name="type"
        type="String"
        label="Type"
        description="The style configuration for the card to use."
        default="default"
        datasource="default,simple,inline"
      />
      <property
        name="content"
        type="String"
        label="Content"
        description="Content in Markdown format."
        default="## Custom Content\n\nLorem ipsum dolor sit amet.\n"
        editor="c/sfGpsDsMarkdownCpe"
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to be applied."
        editor="c/sfGpsDsStringCpe"
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

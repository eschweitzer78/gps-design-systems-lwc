<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>62.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>VIC DS Card Emergency Contact</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="title"
        type="String"
        label="Title"
        description="Title of the card."
        default="Card"
        editor="c/sfGpsDsStringCpe"
      />
      <property
        name="subtitle"
        type="String"
        label="Subtitle"
        description="The subtitle gives more context when required."
        default="Emergency contact details"
        editor="c/sfGpsDsStringCpe"
      />
      <property
        name="summary"
        type="String"
        label="Summary"
        description="Summary in Markdown format."
        default="## Custom Content\n\nLorem ipsum dolor sit amet.\n"
        editor="c/sfGpsDsMarkdownCpe"
      />
      <property
        name="link"
        type="String"
        label="Link text"
        description="Link in Markdown link format."
        default="[Read more](#)"
        editor="c/sfGpsDsStringCpe"
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS classes to be applied."
        editor="c/sfGpsDsStringCpe"
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>62.0</apiVersion>
  <masterLabel>VIC DS Alert Base</masterLabel>
  <isExposed>true</isExposed>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="content"
        type="String"
        label="Content"
        description="Content of the alert in Markdown format."
        default="Alert base"
      />
      <property
        name="backgroundColor"
        type="String"
        label="Background colour"
        description="Colour scheme used for the background."
        default="primary"
        datasource="primary,dark_primary,secondary,extra_dark_neutral,dark_neutral,dark_neutral_1,mid_neutral_1,mid_neutral_2,light_neutral,danger,warning,success,white,black"
      />
      <property
        name="textColor"
        type="String"
        label="Text colour"
        description="Colour scheme used for the text."
        default="white"
        datasource="primary,dark_primary,secondary,extra_dark_neutral,dark_neutral,dark_neutral_1,mid_neutral_1,mid_neutral_2,light_neutral,danger,warning,success,white,black"
      />
      <property
        name="iconSymbol"
        type="String"
        label="Icon symbol"
        description="Symbol used for the icon."
        default="alert_information"
      />
      <property
        name="iconColor"
        type="String"
        label="Icon colour"
        description="Colour scheme used for the icon."
        default="white"
        datasource="primary,dark_primary,secondary,extra_dark_neutral,dark_neutral,dark_neutral_1,mid_neutral_1,mid_neutral_2,light_neutral,danger,warning,success,white,black"
      />
      <property
        name="closeIconColor"
        type="String"
        label="Close icon colour"
        description="Colour scheme used for the close icon."
        default="white"
        datasource="hide,primary,dark_primary,secondary,extra_dark_neutral,dark_neutral,dark_neutral_1,mid_neutral_1,mid_neutral_2,light_neutral,danger,warning,success,white,black"
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to be applied."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

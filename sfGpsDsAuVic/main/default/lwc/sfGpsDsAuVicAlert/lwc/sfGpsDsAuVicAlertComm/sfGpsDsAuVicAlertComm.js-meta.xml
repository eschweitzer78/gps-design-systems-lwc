<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>62.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>VIC DS Alert</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="title"
        type="String"
        label="Title"
        description="Title."
        default="Alert"
      />
      <property
        name="type"
        type="String"
        label="Type"
        description="Type."
        datasource="Emergency,Fire,Flood,Medical,Lightning,Pollution,Heat wave,Traffic"
      />
      <property
        name="link"
        type="String"
        label="Link text"
        description="Link text."
        default="[Link text](#)"
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to be applied."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

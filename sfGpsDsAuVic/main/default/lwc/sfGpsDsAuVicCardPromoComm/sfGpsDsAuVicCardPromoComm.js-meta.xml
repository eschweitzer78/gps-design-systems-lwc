<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>60.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>VIC DS Card Promo</masterLabel>
  <description
  >A card promo widget in the VIC Government Design System</description>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property label="Title" name="title" type="String" description="Title." />
      <property
        label="Link"
        name="link"
        type="String"
        description="Link in Markdown link format."
      />
      <property
        label="Summary"
        name="summary"
        type="String"
        description="Main contact, usually as first name, last name and title."
      />
      <property label="Image" name="image" type="String" description="Image" />
      <property
        label="Start date"
        name="dateStart"
        type="String"
        description="Start date in ISO format."
      />
      <property
        label="End date"
        name="dateEnd"
        type="String"
        description="End date in ISO format."
      />
      <property
        label="Content type"
        name="contentType"
        type="String"
        description="Content type."
        datasource=",Event,Grant,News,Publication,Profile: Aboriginal Honour Roll,Profile: Australia Day Ambassador,Profile: Victorian Design Review Panel,Profile: Women's Honour Roll,Recommendation - Family Violence"
      />
      <property label="Topic" name="topic" type="String" description="Topic." />
      <property
        label="Show metadata"
        name="showMeta"
        type="Boolean"
        description="Show metadata."
      />
      <property
        label="Display style"
        name="displayStyle"
        type="String"
        description="Display style."
        datasource="noImage,thumbnail,profile"
      />
      <property
        label="Is grant ongoing?"
        name="isGrantOngoing"
        type="Boolean"
        description="Is grant ongoing."
      />
      <property
        label="Induction year"
        name="inductionYear"
        type="String"
        description="Induction year."
      />
      <property
        label="FV recommendation status"
        name="fvRecommendationStatus"
        type="String"
        description="FV recommendation status."
      />
      <property
        label="Class name"
        name="className"
        type="String"
        description="Additional CSS class(es) to apply."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

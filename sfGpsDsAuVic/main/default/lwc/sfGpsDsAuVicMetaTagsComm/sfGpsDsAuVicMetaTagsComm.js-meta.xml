<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>60.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>VIC DS Meta Tags</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="links"
        type="String"
        label="Links"
        description="List of tags in Markdown link format."
        default="[Digital](#)[Discovery](#)"
      />
      <property
        name="theme"
        type="String"
        label="Theme"
        description="Colour theme to be used."
        default="light"
        datasource="light,dark,solid"
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to be applied."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

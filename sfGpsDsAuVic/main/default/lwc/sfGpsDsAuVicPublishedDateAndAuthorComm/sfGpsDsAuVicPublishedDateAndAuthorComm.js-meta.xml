<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>55.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>VIC DS Published Date and Author</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="date"
        type="String"
        label="Date"
        description="Publication date in ISO8601 format."
      />
      <property
        name="locationPrefix"
        type="String"
        label="Location prefix"
        description="Prefix used prior to location."
        default="from"
      />
      <property
        name="location"
        type="String"
        label="Location"
        description="Location the data was published from."
        default="Melbourne"
      />
      <property
        name="authorPrefix"
        type="String"
        label="Author prefix"
        description="Prefix used prior to author."
        default="Published by"
      />
      <property
        name="author"
        type="String"
        label="Author"
        description="Name of the person(s) the data was published by."
        default="Daniel Andrews"
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to be applied."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

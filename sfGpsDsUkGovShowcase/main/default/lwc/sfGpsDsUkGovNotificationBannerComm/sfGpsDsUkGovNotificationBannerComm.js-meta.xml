<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>64.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>GOV.UK Notification Banner</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="type"
        type="String"
        label="Type"
        description="Type of banner."
        default="default"
        datasource="default,success"
      />
      <property
        name="headingLevel"
        type="String"
        label="Heading level"
        default="2"
        datasource="1,2,3,4,5,6"
      />
      <property
        name="title"
        type="String"
        label="Title"
        description="Key message of the alert."
        default="Important"
      />
      <property
        name="content"
        type="String"
        label="Content"
        description="Further description to guide and inform users in Markdown format."
        default="You have 7 days left to send your application. [View application](#)."
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to be applied."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

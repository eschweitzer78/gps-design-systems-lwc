<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>61.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>QLD DS In-page alert</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="type"
        type="String"
        label="Type"
        default="info"
        datasource="info,success,warning,error"
      />
      <property
        name="title"
        type="String"
        label="Title"
        default="In-page alert"
        editor="c/sfGpsDsStringCpe"
      />
      <property
        name="copy"
        type="String"
        label="Copy"
        description="Copy of the alert in markdown format. Leave blank to get a slot in LWR."
        default="Lorem ipsum dolor **sit amet**, [consectetur adipiscing](#) elit ut aliq hetyuo dguan. Lorem ipsum dolor sit amet, consectetur adipiscing elit ut aiq."
        editor="c/sfGpsDsMarkdownCpe"
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to be applied."
        editor="c/sfGpsDsStringCpe"
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>62.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>QLD DS Loading Spinner</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="mode"
        type="String"
        label="Mode"
        description="Rendering mode of the spinner."
        default="default"
        datasource="default,landscape,minimal"
      />
      <property
        name="label"
        type="String"
        label="Label"
        description="Indicates the user what type of action is occurring."
        default="Loading..."
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to be applied."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

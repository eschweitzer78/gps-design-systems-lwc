<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>55.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>Service NSW Breadcrumbs and title</masterLabel>
  <targets>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>
  </targets>
  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="label"
        type="String"
        label="Aria label"
        description="Label used for accessibility of breadcrumbs."
        default="Breadcrumbs"
      />
      <property
        name="title"
        type="String"
        label="Title"
        description="Title of the page."
        default="Title"
      />
      <property
        name="legend"
        type="String"
        label="Legend"
        description="Legend rendered below title"
      />
      <property
        name="items"
        type="String"
        label="Items"
        description="Links to parent and optionally current pages in Markdown format."
        default="[Home](#)[Parent](#)"
      />
      <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to be applied."
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>

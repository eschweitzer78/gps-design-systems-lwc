<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle
  xmlns="http://soap.sforce.com/2006/04/metadata"
  fqn="sfGpsDsAuNswThemeLayoutLwr"
>
  <apiVersion>60.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>VIC2 DS LWR Standard Theme Layout</masterLabel>
  <targets>
    <target>lightningCommunity__Theme_Layout</target>
    <target>lightningCommunity__Default</target>
  </targets>

  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        label="Direction"
        name="direction"
        type="String"
        default="auto"
        datasource="ltr,rtl,auto"
      />
      <property
        label="Background"
        name="background"
        type="String"
        default="default"
        datasource="default,alt"
      />
      <property
        label="Show back to top"
        name="showBackToTop"
        type="Boolean"
        default="true"
      />
      <property
        label="Skip to content label"
        name="skipToContentLabel"
        type="String"
        default="Skip to main content"
      />
      <property label="Theme class name" name="themeClassName" type="String" />
      <property
        label="Above header class name"
        name="aboveHeaderClassName"
        type="String"
      />
      <property
        label="Has header"
        name="hasHeader"
        type="Boolean"
        default="true"
      />
      <property
        label="Header class name"
        name="headerClassName"
        type="String"
        default="rpl-layout__header"
      />
      <property
        label="Has below header"
        name="hasBelowHeader"
        type="Boolean"
        default="true"
      />
      <property
        label="Below header class name"
        name="belowHeaderClassName"
        type="String"
        default="rpl-u-margin-t-1"
      />
      <property
        label="Footer class name"
        name="footerClassName"
        type="String"
      />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>
